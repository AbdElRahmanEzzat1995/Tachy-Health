@model TachyHealth.ViewModel.UsersViewModel

@{ 
    ViewBag.Title = "Profile";
}

<h2>Admin Profile</h2>

@using (Html.BeginForm("Edit", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Users.</h4>
    <hr />
    
    <table id="UsersTable" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>User Full Name</th>
                <th>Email</th>
                <th>Mobile Number</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var c in Model.Users)
            {
                string x = "Edit/" + @c.Id;
            <tr>
                <td><a href=@x> @c.UserName</a></td>
                <td>@c.Email</td>
                <td>@c.PhoneNumber</td>
                <td><button Id="@c.Id " class="btn btn-link js-delete">Delete</button> </td>
            </tr>
                x = null;
            }
        </tbody>

    </table>
}


